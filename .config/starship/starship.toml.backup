# Directory module - shows current working directory
[directory]
# Text and background colors for the directory segment
style = "fg:#e3e5e5 bg:#9c27b0"
# Format template: [ $path ] with the specified style
format = "[ $path ]($style)"
# Truncate directory path to 3 levels from the end
truncation_length = 3
# Symbol to show when path is truncated
truncation_symbol = "‚Ä¶/"

# Directory substitutions - replace common folder names with icons
[directory.substitutions]
"Documents" = "Û∞àô "
"Downloads" = "ÔÄô "
"Music" = "ÔÄÅ "
"Pictures" = "ÔÄæ "

# Git branch module - shows current git branch
[git_branch]
# Icon symbol for git branch
symbol = "Ôêò"
# Background color for git branch segment
style = "bg:#6b46c1"
# Format: [[ $symbol $branch ](text_color bg_color)]($style)
format = '[[ $symbol $branch ](fg:#9c27b0 bg:#6b46c1)]($style)'

# Git status module - shows git repository status (modified, staged, etc.)
[git_status]
# Background color for git status segment
style = "bg:#6b46c1"
# Format: [[($all_status$ahead_behind )](text_color bg_color)]($style)
format = '[[($all_status$ahead_behind )](fg:#9c27b0 bg:#6b46c1)]($style)'

# Node.js module - shows Node.js version when in a Node.js project
[nodejs]
# Icon symbol for Node.js
symbol = "Óúò"
# Background color for Node.js segment
style = "bg:#4c1d95"
# Format: [[ $symbol ($version) ](text_color bg_color)]($style)
format = '[[ $symbol ($version) ](fg:#9c27b0 bg:#4c1d95)]($style)'

# Rust module - shows Rust version when in a Rust project
[rust]
# Icon symbol for Rust
symbol = "Óû®"
# Background color for Rust segment
style = "bg:#4c1d95"
# Format: [[ $symbol ($version) ](text_color bg_color)]($style)
format = '[[ $symbol ($version) ](fg:#9c27b0 bg:#4c1d95)]($style)'

# Go (Golang) module - shows Go version when in a Go project
[golang]
# Icon symbol for Go
symbol = "Óòß"
# Background color for Go segment
style = "bg:#4c1d95"
# Format: [[ $symbol ($version) ](text_color bg_color)]($style)
format = '[[ $symbol ($version) ](fg:#9c27b0 bg:#4c1d95)]($style)'

# PHP module - shows PHP version when in a PHP project
[php]
# Icon symbol for PHP
symbol = "Óòà"
# Background color for PHP segment
style = "bg:#4c1d95"
# Format: [[ $symbol ($version) ](text_color bg_color)]($style)
format = '[[ $symbol ($version) ](fg:#9c27b0 bg:#4c1d95)]($style)'

# Time module - shows current time
[time]
# Enable the time module (disabled by default)
disabled = false
# Time format: %R = 24-hour format (HH:MM)
time_format = "%R" # Hour:Minute Format
# Background color for time segment
style = "bg:#2d1b69"
# Format: [[ Ôê∫ $time ](text_color bg_color)]($style)
format = '[[ Ôê∫ $time ](fg:#b794f6 bg:#2d1b69)]($style)'

# Command duration module - shows how long the last command took
[cmd_duration]
# Minimum execution time to display (in milliseconds)
min_time = 2000
# Show duration in seconds instead of milliseconds for longer commands
show_milliseconds = false
# Text color for command duration
style = "fg:#e3e5e5 bg:#2d1b69"
# Format: [ took $duration ](style)
format = "[ took $duration ](fg:#e3e5e5 bg:#2d1b69)"

# Status module - shows exit code of last command (when non-zero)
[status]
# Symbol to show for failed commands
symbol = "‚úó"
# Symbol to show for successful commands (usually not shown)
success_symbol = ""
# Text color for status
style = "fg:#e3e5e5 bg:#4c1d95"
# Format: [[ $symbol $status ]](style) - only shows on error
format = '[[ $symbol $status ](fg:#e3e5e5 bg:#4c1d95)]($style)'

# Jobs module - shows number of background jobs
[jobs]
# Symbol for background jobs
symbol = "ÔÄì"
# Text color for jobs count
style = "fg:#e3e5e5 bg:#6b46c1"
# Format: [[ $symbol $number ]](style)
format = '[[ $symbol $number ](fg:#e3e5e5 bg:#6b46c1)]($style)'

# Battery module - shows battery status (on laptops)
[battery]
# Display threshold - only show when battery is below this percentage
display = [
    { threshold = 20, style = "fg:#e3e5e5 bg:#9c27b0" },
]
# Format: [[ $symbol $percentage ]](style)
format = '[[ $symbol $percentage ](fg:#e3e5e5 bg:#9c27b0)]($style)'

# Username module - shows current username
[username]
# Text color for username
style = "fg:#090c0c bg:#c4a7e7"
# Format: [ $user ](style)
format = '[ $user ](fg:#090c0c bg:#c4a7e7)'